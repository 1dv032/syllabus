<h1>
  <span class="far fa-trash-alt"></span> Delete
</h1>

<form method="post" action="/todo/delete">
  <input type="hidden" name="id" value="{{locals.id}}" />
  <div class="form-group">
    <input type="text" class="form-control" name="description" placeholder="Update to-do description here" value="{{locals.description}}" readonly="readonly" />
  </div>
  <div class="form-group">
    <input type="checkbox" class="form-control" name="done" {{#if locals.done }} checked="checked" {{/if}} readonly="readonly" />
  </div>
  <button type="submit" class="btn btn-lg btn-primary" autofocus="autofocus">Delete</button>
</form>